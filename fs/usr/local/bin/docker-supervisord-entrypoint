#!/bin/sh
set -e

mkdir -p /data/log

export MYSQL_ROOT_PASSWORD="${MYSQL_ROOT_PASSWORD-root}"
export MYSQL_USER="${MYSQL_USER-app}"
export MYSQL_PASSWORD="${MYSQL_PASSWORD-app}"
export MYSQL_DATABASE="${MYSQL_DATABASE-app}"

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- supervisord "$@"
fi

exec "$@"
